<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/gambar_register" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivIllustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Buat Akun Baru"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2D0C57" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:text="Sudah punya akun? Masuk"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubtitle"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/icon_pengguna"
        android:drawablePadding="8dp"
        android:hint="Buat Nama Pengguna"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="8dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/icon_kata_sandi"
        android:drawablePadding="8dp"
        android:hint="Buat Kata Sandi"
        android:inputType="textPassword"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_daftar"
        android:text="DAFTAR"
        android:textColor="#FFFFFF" />

</RelativeLayout>
